{
    "manifest_version": 3,
    "name": "Now2ai Claude Export Processor",
    "version": "1.0.0",
    "description": "A Chrome extension to process Claude AI chat exports, converting them to formatted Markdown files while maintaining state and processing history.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}